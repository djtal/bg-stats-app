#!/usr/bin/env ruby
#

require "tty-option"
require "pastel"
require_relative "../lib/bg_stats"

class BGStatsImporter
  include TTY::Option

  flag :help do
    short "-h"
    long "--help"
    desc "Print usage"
  end

  flag :database do
    short "-d"
    long "--database string"
    default "bgstats.db"
    desc "specify database name to use"
  end

  flag :backup_file do
    short "-b"
    long "--backup string"
    default "tmp/BGStatsExport.json"
    desc "Backup file to import data from"
  end

  argument :command do
    required
    permit %w[games]
  end

  def run
    if params[:help]
      print help
      exit
    else
      case params[:command]
      when "games"
        db = Sequel.connect("sqlite://#{params[:database]}") # requires sqlite3
        Kiba.run(
          BGstatGameBackupImporter.etl(
            backup_file: params[:backup_file],
            database: db
          )
        )
      end
    end
  end
end


cmd = BGStatsImporter.new
cmd.parse(raise_on_parse_error: true)
cmd.run

